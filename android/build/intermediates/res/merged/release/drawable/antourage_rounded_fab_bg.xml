<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
                android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="2dp" android:color="@color/ant_pink" />
            <solid android:color="@color/ant_pink" />
            <corners android:radius="2dp"/>

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item android:top="6dp" >
        <shape
                android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@color/ant_bg_color_widget_expantion" />
            <solid android:color="@color/ant_bg_color_widget_expantion" />
            <corners android:radius="2dp"/>

        </shape>
    </item>

</layer-list>
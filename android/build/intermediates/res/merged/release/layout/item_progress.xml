<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/viewCircleBackground"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/antourage_circle_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/ivProgressLoadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/antourage_ic_spinner"
            app:layout_constraintBottom_toBottomOf="@id/viewCircleBackground"
            app:layout_constraintEnd_toEndOf="@id/viewCircleBackground"
            app:layout_constraintStart_toStartOf="@id/viewCircleBackground"
            app:layout_constraintTop_toTopOf="@id/viewCircleBackground"/>

</androidx.constraintlayout.widget.ConstraintLayout>